@{
    ViewBag.Title = "BackUp";
}

<script language="javascript" type="text/javascript">
    function fazerBackup() {
        $.ajax({
            url: "/BackUp/Backup/",
            data: "",
            cache: false,
            type: "POST",
            success: function () {
                alert("BackUp realizado");
            },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });
    }

    function fazerRestauracao() {
        $.ajax({
            url: "/BackUp/Restaurar/",
            data: "",
            cache: false,
            type: "POST",
            success: function () {
                alert("BackUp realizado");
            },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });
    }
</script>

<h2>BackUp</h2>

<div class="row">
    <div class="col-md-12">
        <button type="button" class="btn btn-info btn2 btn-lg" id="btnBackUp" onclick="fazerBackup();">Criar BackUp</button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <button type="button" class="btn btn-info btn2 btn-lg" id="btnRestore" style="float: right;" onclick="fazerRestauracao();">Restaurar</button>
